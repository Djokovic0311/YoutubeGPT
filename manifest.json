{
    "manifest_version": 3,
    "name": "YouTube ChatGPT Extension",
    "version": "1.0",
    "permissions": [
        "identity",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*",
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": "src/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}
